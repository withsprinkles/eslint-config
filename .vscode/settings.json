{
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": false,
    "typescript.updateImportsOnFileMove.enabled": "always",

    "editor.stickyScroll.enabled": true,
    "editor.quickSuggestions": {
        "strings": "on"
    },

    "dprint.experimentalLsp": true,
    "biome.enabled": false,
    "prettier.enable": false,
    "deno.enable": false,

    "eslint.enable": true,
    "eslint.codeActionsOnSave.mode": "all",

    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.eslint": "explicit"
    },

    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dprint.dprint",

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.css": "$(capture).css.map, $(capture).*.css",
        ".env": "*.env, .env.*, .envrc, env.d.ts",
        "package.json": ".bun-version, .github*, .npmrc, .vscode*, biome*, bun.lock, dprint.json, mise.toml, tsconfig.*, worker-configuration.*, wrangler.toml, wrangler.json*, workspace.json",
        "readme*": "authors, backers*, changelog*, citation*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*"
    },
    "files.exclude": {
        "**/.DS_Store": true
    },

    "tailwindCSS.experimental.classRegex": [
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
        ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    "tailwindCSS.includeLanguages": {
        "astro": "html"
    },

    "todohighlight.keywords": [
        "MARK:",
        {
            "text": "FIXME:",
            "backgroundColor": "#F14848"
        },
        {
            "text": "TODO:",
            "backgroundColor": "#3593FF"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#434B54",
        "color": "#fff",
        "borderRadius": "2px"
    },

    "files.associations": {
        "wrangler.json": "jsonc",
        "*.css": "tailwindcss"
    },

    "symbols.files.associations": {
        "*.plugin.ts": "eslint",
        "eslint.config.ts": "eslint"
    }
}
