{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "declaration": true,
        "isolatedDeclarations": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
